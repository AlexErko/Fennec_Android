<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Feneec.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#272727</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="SCREEN">
        <item name="android:background">#272727</item>
    </style>
    <style name="BOTTOM_FRAGMENT">
        <item name="android:background">@drawable/bottom_fragment_background_dark</item>
    </style>

    <style name="TEXT_COLOR">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="SUB_SECTION_TITLE">
        <item name="android:textColor">@color/light_grey_2</item>
    </style>

    <style name="SUB_SECTION_BACK">
        <item name="android:background">@color/light_grey_2</item>
    </style>



    <style name="INPUT_EDIT_TEXT">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/medium_grey</item>
    </style>

    <style name="INPUT">
        <item name="android:background">@drawable/input_background_dark</item>
    </style>

    <style name="SOCIAL_BACK">
        <item name="android:background">@drawable/social_background_dark</item>
    </style>
</resources>