<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/SCREEN"
    tools:context=".afterAuthFlow.profileModule.ProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="17dp"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            style="@style/MENU_BUTTON"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/profile"
            android:gravity="center"
            style="@style/TITLE"
            android:layout_marginRight="32dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="172dp"
            android:layout_height="94dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            style="@style/ADD_IMAGE"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="17dp"
        android:text="@string/name"
        style="@style/SUB_SECTION_TITLE"
        android:textAppearance="@style/T1"/>

    <ua.com.fennec.customs.ui.FennecEditText
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="17dp"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:textAppearance="@style/H2Regular"
        android:maxLines="1"
        android:singleLine="true"
        app:isEditable="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="17dp"
        android:text="@string/phone"
        style="@style/SUB_SECTION_TITLE"
        android:textAppearance="@style/T1"/>

    <ua.com.fennec.customs.ui.FennecEditText
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="17dp"
        android:inputType="number"
        android:textAppearance="@style/H2Regular"
        android:maxLines="1"
        android:singleLine="true"
        app:isEditable="true"
        android:hint="+38 (___) ___-__-__"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="17dp"
        android:text="@string/email"
        style="@style/SUB_SECTION_TITLE"
        android:textAppearance="@style/T1"/>

    <ua.com.fennec.customs.ui.FennecEditText
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="17dp"
        android:inputType="textEmailAddress"
        android:textAppearance="@style/H2Regular"
        android:maxLines="1"
        android:singleLine="true"
        app:isEditable="true"
        android:hint="fennec@gmail.com"
        />
    
    
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey_2"/>



        <ImageView
            android:layout_width="172dp"
            android:layout_height="94dp"
            android:layout_marginTop="40dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            style="@style/ADD_IMAGE"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="17dp"
            android:text="@string/company_name"
            style="@style/SUB_SECTION_TITLE"
            android:textAppearance="@style/T1"/>

        <ua.com.fennec.customs.ui.FennecEditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="17dp"
            android:inputType="text"
            android:textAppearance="@style/H2Regular"
            android:maxLines="1"
            android:singleLine="true"
            app:isEditable="true"
            android:hint="@string/fop_matvienko"
            />
</LinearLayout>
</LinearLayout>
